
#解决ssh登录慢
vi /etc/ssh/sshd_config
增加一行记录：UseDNS no
vi /etc/ssh/sshd_config
修改GSSAPIAuthentication参数为 no，默认是yes
service sshd restart

#免登陆
ssh-keygen -t rsa -P ''
cat id_rsa.pub >> authorized_keys
chmod 700 .ssh
chmod 600 authorized_keys

drwx------. 2 k8s  k8s   80 Aug 27 22:06 .ssh
-rw-r--r--. 1 k8s k8s  784 Aug 27 22:02 authorized_keys
-rw-------. 1 k8s k8s 1675 Aug 27 22:01 id_rsa
-rw-r--r--. 1 k8s k8s  392 Aug 27 22:01 id_rsa.pub
-rw-r--r--. 1 k8s k8s  175 Aug 27 22:03 known_hosts

#创建用户
groupadd k8s
useradd -d /home/k8s -g k8s k8s

#静态IP
cat <<EOF > /etc/sysconfig/network
# Created by anaconda
NETWORKING=yes
NETWORKING_IPV6=no
HOSTNAME=k8s-199
GATEWAY=192.168.1.1
EOF

cat <<EOF > /etc/sysconfig/network-scripts/ifcfg-ens33
DEVICE=ens33
NETMASK=255.255.255.0
IPADDR=192.168.1.199
BOOTPROTO=static
ONBOOT=yes
DNS1=211.99.25.1
PEERDNS=yes
EOF

cat <<EOF > /etc/resolv.conf
# Generated by NetworkManager
nameserver 211.99.25.1
nameserver 8.8.8.8
EOF
#重启网卡
/sbin/ifdown ens33
/sbin/ifup ens33
#设置HOSTNAME
hostnamectl set-hostname k8s-199
#开机启动程序
vi /etc/rc.local
#查看版本
cat /proc/version
#修改密码
passwd k8s

#ssh 无法登陆查看centos 系统LOG
 /var/log/secure
 
#查看网桥设备
brctl show
#创建网桥
brctl addbr br0
ifconfig br0  192.168.2.1 netmask 255.255.255.0

#列出路由表条目
 ip route show
 ip route list
#添加路由规则
ip route add 对方容器所在的ip网段/子网掩码 via 对方虚拟机ip dev 通过哪个网卡通信
#添加路由
ip route add 182.119.1.0/24 via 192.168.1.189 dev eno1
#删除路由
ip route del 182.119.0.0/24 dev br-dc58acb79ff7 proto kernel scope link src 182.119.0.1
